<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <import resource="config-server-storage.xml"/>
    <import resource="config-server-netty.xml"/>

    <bean id="configServerService" class="com.cmbc.configserver.core.service.impl.ConfigServerServiceImpl">
        <property name="configStorage" ref="configStorage"/>
        <property name="notifyService" ref="notifyService"/>
    </bean>

    <bean id="notifyService" class="com.cmbc.configserver.core.notify.NotifyService">
        <property name="configStorage" ref="configStorage"/>
        <property name="configNettyServer" ref="configNettyServer"/>
    </bean>

    <bean id="heartbeatService" class="com.cmbc.configserver.core.heartbeat.HeartbeatService">
        <property name="heartBeatDao" ref="heartBeatDao"/>
    </bean>
</beans>