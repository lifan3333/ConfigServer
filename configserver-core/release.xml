<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<baseDirectory>configserver-core</baseDirectory>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>bin/*</include>
				<include>conf/*</include>
			</includes>
		</fileSet>
	</fileSets>

    <binaries>
        <outputDirectory>lib/</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
            <dependencySet>
                <outputDirectory>lib/</outputDirectory>
            </dependencySet>
        </dependencySets>
    </binaries>
</assembly>